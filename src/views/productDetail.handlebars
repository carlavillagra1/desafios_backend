<div class="container"> 
    <h2>Detalles del producto</h2>
<div class="containercart">
    <div class="cartDetail">
    <img class="infoFotoDetail" src="{{product.thumbnail.[0]}}" alt="{{product.title}}">
    <div class="infoD">
    <strong class="info">{{product.title}}</strong> 
    <strong class="info">Descripción:</strong> {{product.description}}
    <strong class="info">Precio:</strong> ${{product.price}}
    <strong class="info">Stock:</strong> {{product.stock}}
    <strong class="info">Código:</strong> {{product.code}}
    <form action="/api/carts/{{user.cart}}/product/{{product._id}}" method="POST">
    <button type="submit" class="btnCarrito">Agregar al carrito</button>
    </form>
    </div>
    </div>
    <div class="volver">
    <a href="/api/views/home"> Volver a home</a>
    </div>
</div>

</div>
