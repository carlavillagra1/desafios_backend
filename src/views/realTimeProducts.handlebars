<div class="containerREALTIME">
        <div class="saludo">
                <h2>Bienvenido {{user.nombre}} {{user.apellido}} </h2>
                <p>En este panel puedes agregar los productos que desees.</p>

                <div class="btnPerfil">
                        <a href="/api/views/profile" class="btnPerfil">Perfil</a>
                </div>

                {{#if (eq user.role 'admin')}}
                <div class="btnPremium">
                        <a href="/api/views/PanelAdmin" class="btnAdmin">Ver usuarios</a>
                </div>
                {{/if}}

                {{#if (eq user.role 'premium')}}
                <div class="btnPremium">
                        <a href="/api/views/home" class="btnPremium">Home</a>
                </div>
                {{/if}}

                <form action="/api/session/logout" method="POST">
                        <button type="submit" class="btnCerrar">Cerrar Sesi√≥n</button>
                </form>
        </div>

        <div class="containerForm">
                <div class="form">
                        <label for="title">Titulo</label>
                        <input type="text" name="title" id="title">
                        <label for="description"> Descripcion</label>
                        <input type="text" name="description" id="description">
                        <label for="price">Precio</label>
                        <input type="number" name="price" id="price">
                        <label for="thumbnail">Thumbnail</label>
                        <input type="text" name="thumbnail" id="thumbnail">
                        <label for="code">Codigo</label>
                        <input type="text" name="code" id="code">
                        <label for="stock">Stock</label>
                        <input type="number" name="stock" id="stock">
                        <label for="category">Categoria</label>
                        <input type="text" name="category" id="category">
                        <button type="button" id="btnAgregar" class="btnA">Agregar producto</button>
                </div>


                <div id="productsList" class="listaP"> </div>

        </div>
</div>
<script>
        const user = {{{ json user }}}; 
</script>
